<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_popup_continuar"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:background="#CED6E0"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_popup_voltar"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_popup_voltar"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:background="#CED6E0"
        android:text="Voltar"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="135dp" />

    <EditText
        android:id="@+id/editTextPopupNome"
        android:layout_width="259dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Digite o nome da refeição"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button_popup_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477" />

</androidx.constraintlayout.widget.ConstraintLayout>