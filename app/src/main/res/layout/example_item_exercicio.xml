<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="71dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="0.5dp"
        android:background="#CED6E0"
        android:backgroundTint="#CED6E0"
        android:elevation="4dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <Button
            android:id="@+id/buttonADD"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="376dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_baseline_add_24"
            android:elevation="4dp"
            android:onClick="adicionarExercicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <Button
            android:id="@+id/buttonEDIT"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="339dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_edit"
            android:elevation="4dp"
            android:onClick="editarExercicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/TextViewExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:text="Exercicio"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewDuracaoExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="35dp"
            android:text="120"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewUnidadeTempoExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="35dp"
            android:text="min"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="35dp"
            android:text="-"
            android:textColor="#6E6F71"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/TextViewCaloriasExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="35dp"
            android:text="700"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewUnidadeCaloriasExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="35dp"
            android:text="kcal"
            android:textColor="#6E6F71"
            android:textSize="15dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>