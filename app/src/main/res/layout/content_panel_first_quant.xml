<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutPainelInfoAlime">

    <TextView
        android:id="@+id/textViewPanel1"
        android:layout_width="379dp"
        android:layout_height="197dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#CED6E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextQtd"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Quantidade"
        android:inputType="number"
        android:maxLength="5"
        app:layout_constraintStart_toStartOf="@+id/textViewPanel1"
        app:layout_constraintTop_toTopOf="@+id/textViewPanel1" />

    <TextView
        android:id="@+id/textViewTitlePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:text="Titulo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPanel1"
        app:layout_constraintTop_toTopOf="@+id/textViewPanel1" />

    <TextView
        android:id="@+id/textViewUniMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="g"
        app:layout_constraintEnd_toEndOf="@+id/editTextQtd"
        app:layout_constraintTop_toTopOf="@+id/textViewPanel1" />


</androidx.constraintlayout.widget.ConstraintLayout>