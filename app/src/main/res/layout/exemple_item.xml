<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#CED6E0"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="58dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/textViewItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewItemQuant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginTop="6dp"
            android:text="30" />

        <TextView
            android:id="@+id/textViewItemKcalMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textViewItemKcal"
            android:text="Kcal" />

        <TextView
            android:id="@+id/textViewItemKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textView5"
            android:text="0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textViewItemQuantMeasure"
            android:text="-" />

        <TextView
            android:id="@+id/textViewItemQuantMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textViewItemQuant"
            android:text="min" />

        <ImageView
            android:id="@+id/imageViewButtonMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            app:srcCompat="@drawable/ic_baseline_more_vert_24" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>