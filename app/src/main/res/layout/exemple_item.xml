<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#CED6E0"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/textViewItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewItemQuant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginTop="0dp"
            android:text="30"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewItemQuantMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewItemQuant"
            android:text="min"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewItemKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView5"
            android:text="0"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewItemKcalMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewItemKcal"
            android:text="Kcal"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewItemQuantMeasure"
            android:text="-"
            android:textColor="#6E6F71"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageViewButtonMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:hapticFeedbackEnabled="false" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>