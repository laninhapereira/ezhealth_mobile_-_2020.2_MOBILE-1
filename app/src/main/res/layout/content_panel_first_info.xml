<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewPanel1"
        android:layout_width="379dp"
        android:layout_height="197dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#CED6E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTituloPrimeiroPainel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:elevation="20dp"
        android:text="Titulo"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPanel1"
        app:layout_constraintTop_toTopOf="@+id/textViewPanel1" />

    <ImageView
        android:id="@+id/imageViewButtonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="13dp"
        android:elevation="20dp"
        android:onClick="adicionar"
        app:layout_constraintEnd_toEndOf="@+id/textViewPanel1"
        app:layout_constraintTop_toTopOf="@+id/textViewPanel1"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="372dp"
        android:layout_height="144dp"
        android:layout_marginBottom="8dp"
        android:elevation="20dp"
        android:padding="4dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPanel1"
        app:layout_constraintEnd_toEndOf="@+id/textViewPanel1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewPanel1" />

</androidx.constraintlayout.widget.ConstraintLayout>